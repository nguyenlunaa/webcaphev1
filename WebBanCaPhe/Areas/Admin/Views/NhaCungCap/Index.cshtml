@model List<WebBanCaPhe.Models.NhaCungCap>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="mdi mdi-check-all mr-2"></i>
        @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="mdi mdi-check-all mr-2"></i>
        @TempData["Error"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<div class="row mb-2">
    <div class="col-sm-4">
        <h4 class="card-title">Danh sách nhà cung cấp</h4>
    </div>
    <div class="col-sm-8">
        <div class="text-sm-right">
            <button type="button" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2" data-toggle="modal" data-target=".bs-example-modal-center"><i class="mdi mdi-plus mr-1"></i> Thêm tài khoản</button>
        </div>
    </div><!-- end col-->
</div>


@*form add*@
<div class="modal fade bs-example-modal-center" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title mt-0">Thêm mới nhà cung cấp</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form action="~/NhaCungCap/ThemNhaCungCap" method="post">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="formrow-password-input">Tên Nhà Cung Cấp</label>
                                <input type="text" class="form-control" id="formrow-hoten-input" name="TenNCC" required>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="formrow-email-input">Email</label>
                                <input type="email" class="form-control" id="formrow-email-input" name="Email" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="formrow-firstname-input">Địa chỉ</label>
                        <textarea type="text" class="form-control" id="formrow-diachi-input" name="DiaChi" required> </textarea>
                    </div>

                    <div class="form-group">
                        <label for="formrow-firstname-input">Fax</label>
                        <textarea type="text" class="form-control" id="formrow-diachi-input" name="Fax" required> </textarea>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="formrow-password-input">Điện Thoại</label>
                            <input type="text" class="form-control" id="formrow-hoten-input" name="DienThoai" required>
                        </div>
                    </div>

                    <div>
                        <button type="submit" class="btn btn-primary w-md">Thêm mới</button>
                    </div>
                </form>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@*Data View*@
<table id="datatable" class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">
    <thead>
        <tr>
            <th>Tên nhà cung cấp</th>
            <th>Địa chỉ</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Fax</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenNCC</td>
                <td>@item.DiaChi</td>
                <td>@item.Email</td>
                <td>@item.DienThoai</td>
                <td>@item.Fax</td>

                <td>
                    <a href="NhaCungCap/SuaNhaCungCap/@item.MaNCC" class="mr-3 text-primary"
                       data-toggle="tooltip" data-placement="top" title="" data-original-title="Edit">
                        <i class="mdi mdi-pencil font-size-18"></i>
                    </a>
                    <a href="NhaCungCap/XoaNhaCungCap/@item.MaNCC" class="text-danger delete"
                       data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete" id="sa-warning">
                        <i class="mdi mdi-close font-size-18"></i>

                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


